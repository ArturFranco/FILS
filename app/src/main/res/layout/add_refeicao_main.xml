<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Alimento"
        android:textSize="25dp"
        android:textAlignment="center"
        android:padding="8dp"
        android:id="@+id/grupoTituloNovoAlimento"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoria: "
            android:textSize="20dp"
            android:padding="8dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="20dp"
            android:padding="8dp"
            android:id="@+id/spinnerGrupoAlimento">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimento: "
            android:textSize="20dp"
            android:padding="8dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="20dp"
            android:paddingBottom="8dp"
            android:id="@+id/spinnerAlimento">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Quantidade (g): "
            android:textSize="20dp"
            android:padding="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Digite a quantidade"
            android:id="@+id/qtdAlimento"
            android:textSize="15dp"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:textColor="@color/white"
        android:backgroundTint="@color/botao"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonAddAlimento"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alimento / Quantidade (g)"
        android:textSize="20dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaAlimentosSalvos"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:textColor="@color/white"
            android:backgroundTint="@color/botao"
            android:id="@+id/buttonSalvarRefeicao"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refazer"
            android:textColor="@color/white"
            android:backgroundTint="@color/botao"
            android:id="@+id/buttonRefazerRefeicao"
            android:layout_weight="1"
            android:layout_margin="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
</LinearLayout>