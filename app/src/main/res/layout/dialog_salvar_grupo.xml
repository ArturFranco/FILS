    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descricaoText"
        android:layout_below="@+id/tituloDialogGrupo"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descricaoText"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaoConfirma"
            android:text="Confirma"
            android:backgroundTint="@color/verdePadrao"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="@color/verdePadrao"
            android:id="@+id/botaoCancela"
            android:textColor="@color/white"/>
    </LinearLayout>


</RelativeLayout>