<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_arrow"
            android:backgroundTint="@color/transparente"
            android:id="@+id/backAddTreino"
            android:onClick="voltarTipoTreino"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tipoTreino"
            android:text="MUSCULAÇÃO"
            android:textSize="32dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:textColor="@color/botao"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/foward_arrow"
            android:backgroundTint="@color/transparente"
            android:id="@+id/fowardAddTreino"
            android:onClick="passarTipoTreino"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Treino"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textAlignment="center"
                        android:id="@+id/tipoA"
                        android:layout_centerHorizontal="true"
                        android:textSize="24dp"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:id="@+id/checkBoxA"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tipoA"
                        android:onClick="clickA"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textAlignment="center"
                        android:id="@+id/tipoB"
                        android:layout_centerHorizontal="true"
                        android:textSize="24dp"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:id="@+id/checkBoxB"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tipoB"
                        android:onClick="clickB"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textAlignment="center"
                        android:id="@+id/tipoC"
                        android:layout_centerHorizontal="true"
                        android:textSize="24dp"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:id="@+id/checkBoxC"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tipoC"
                        android:onClick="clickC"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textAlignment="center"
                        android:id="@+id/tipoD"
                        android:layout_centerHorizontal="true"
                        android:textSize="24dp"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:id="@+id/checkBoxD"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tipoD"
                        android:onClick="clickD"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E"
                        android:textAlignment="center"
                        android:id="@+id/tipoE"
                        android:layout_centerHorizontal="true"
                        android:textSize="24dp"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:layout_weight="1"
                        android:id="@+id/checkBoxE"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tipoE"
                        android:onClick="clickE"/>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grupo Musculares"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Novo Treino"
            android:id="@+id/addTreinoText"
            android:layout_gravity="center_horizontal|center_vertical"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadNovoTreino"
            android:text="Salvar"
            android:layout_gravity="center_horizontal"
            android:onClick="uploadTreino"/>
    </LinearLayout>

</LinearLayout>